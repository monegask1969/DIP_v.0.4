<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/dogs_in_pocket</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password"></property>
    <!--<property name="hibernate.hbm2ddl.auto">create</property>-->
    
    
    <mapping class="com.so.springwebapp.domain.Users"/>
<!--    <mapping class="com.so.springwebapp.domain.Role"/>
    <mapping class="com.so.springwebapp.domain.UserRole"/>-->
    <mapping class="com.so.springwebapp.domain.Orders"/>
    <mapping class="com.so.springwebapp.domain.Products"/>
    <mapping class="com.so.springwebapp.domain.Items"/>
  </session-factory>
  
</hibernate-configuration>
